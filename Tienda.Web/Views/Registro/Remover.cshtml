@model Tienda.Models.Registro
@{
    ViewData["Title"] = "Remover";
}
<h3>¿Está seguro que desea eliminar la información relacionada del Producto seleccionado?</h3>

<form asp-action="Remover" method="post">

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Eliminar" />
        <input class="btn btn-primary" type="button" value="Cancelar" />
    </div>

</form>